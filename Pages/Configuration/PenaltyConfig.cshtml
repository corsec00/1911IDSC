@page
@model CompetitionApp.Pages.Configuration.PenaltyConfigModel
@{
    ViewData["Title"] = "Configuração de Penalidades";
}

<h1>Configuração de Penalidades</h1>

<div class="row">
    <div class="col-md-8 offset-md-2">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">Defina os valores de penalidades</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="PenaltyConfig.BravoValue" class="control-label">Bravo (segundos)</label>
                                <input asp-for="PenaltyConfig.BravoValue" class="form-control" />
                                <span asp-validation-for="PenaltyConfig.BravoValue" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group mb-3">
                                <label asp-for="PenaltyConfig.CharlieValue" class="control-label">Charlie (segundos)</label>
                                <input asp-for="PenaltyConfig.CharlieValue" class="form-control" />
                                <span asp-validation-for="PenaltyConfig.CharlieValue" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group mb-3">
                                <label asp-for="PenaltyConfig.MissValue" class="control-label">Miss (segundos)</label>
                                <input asp-for="PenaltyConfig.MissValue" class="form-control" />
                                <span asp-validation-for="PenaltyConfig.MissValue" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group mb-3">
                                <label asp-for="PenaltyConfig.VitimaValue" class="control-label">Vítima (segundos)</label>
                                <input asp-for="PenaltyConfig.VitimaValue" class="form-control" />
                                <span asp-validation-for="PenaltyConfig.VitimaValue" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="PenaltyConfig.PlateValue" class="control-label">Plate (segundos)</label>
                                <input asp-for="PenaltyConfig.PlateValue" class="form-control" />
                                <span asp-validation-for="PenaltyConfig.PlateValue" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group mb-3">
                                <label asp-for="PenaltyConfig.FaultValue" class="control-label">Fault (segundos)</label>
                                <input asp-for="PenaltyConfig.FaultValue" class="form-control" />
                                <span asp-validation-for="PenaltyConfig.FaultValue" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group mb-3">
                                <label asp-for="PenaltyConfig.DisqualifiedValue" class="control-label">Desclassificado (segundos)</label>
                                <input asp-for="PenaltyConfig.DisqualifiedValue" class="form-control" />
                                <span asp-validation-for="PenaltyConfig.DisqualifiedValue" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary">Salvar Configurações</button>
                        <a asp-page="/Index" class="btn btn-secondary">Voltar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="/Pages/Shared/_ValidationScriptsPartial.cshtml" />
}
