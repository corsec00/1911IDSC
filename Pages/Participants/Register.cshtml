@page
@model CompetitionApp.Pages.Participants.RegisterModel
@{
    ViewData["Title"] = "Cadastro de Participantes";
}

<h1>Cadastro de Participantes</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                Novo Participante
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="form-group mb-3">
                        <label asp-for="NewParticipant.Name">Nome</label>
                        <input asp-for="NewParticipant.Name" class="form-control" required />
                    </div>
                    <button type="submit" class="btn btn-primary">Adicionar Participante</button>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                Participantes Cadastrados (@Model.Participants.Count)
            </div>
            <div class="card-body">
                @if (Model.Participants.Count == 0)
                {
                    <p>Nenhum participante cadastrado.</p>
                }
                else
                {
                    <ul class="list-group">
                        @foreach (var participant in Model.Participants)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @participant.Name
                                <form method="post" asp-page-handler="Remove" class="d-inline">
                                    <input type="hidden" name="name" value="@participant.Name" />
                                    <button type="submit" class="btn btn-sm btn-danger">Remover</button>
                                </form>
                            </li>
                        }
                    </ul>
                }
            </div>
            <div class="card-footer">
                <a asp-page="/Index" class="btn btn-secondary">Voltar</a>
            </div>
        </div>
    </div>
</div>
