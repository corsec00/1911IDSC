@page
@model CompetitionApp.Pages.Rounds.Round2Model
@{
    ViewData["Title"] = "Segunda Rodada";
}

<h1>Segunda Rodada</h1>

@if (Model.Participants.Count == 0)
{
    <div class="alert alert-warning">
        Não há participantes cadastrados. <a asp-page="/Participants/Register">Cadastre participantes</a> antes de iniciar a rodada.
    </div>
}
else
{
    <div class="card mb-4">
        <div class="card-header">
            Registro de Resultados
        </div>
        <div class="card-body">
            <form method="post">
                <div class="form-group mb-3">
                    <label for="participantSelect">Selecione o Participante:</label>
                    <select id="participantSelect" name="ParticipantName" class="form-control" required>
                        <option value="">-- Selecione --</option>
                        @foreach (var participant in Model.Participants)
                        {
                            var completed = Model.Round2Results.Any(r => r.Name == participant.Name);
                            if (completed)
                            {
                                <option value="@participant.Name" disabled>@participant.Name (Já registrado)</option>
                            }
                            else
                            {
                                <option value="@participant.Name">@participant.Name</option>
                            }
                        }
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label for="timeInSeconds">Tempo (em segundos):</label>
                    <input type="number" id="timeInSeconds" name="TimeInSeconds" class="form-control" min="0" max="999" required />
                    <small class="form-text text-muted">Use 999 para indicar que o participante foi eliminado.</small>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group mb-3">
                            <label for="bravoCount">Bravo (3s):</label>
                            <input type="number" id="bravoCount" name="BravoCount" class="form-control" min="0" value="0" required />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group mb-3">
                            <label for="charlieCount">Charlie (5s):</label>
                            <input type="number" id="charlieCount" name="CharlieCount" class="form-control" min="0" value="0" required />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group mb-3">
                            <label for="missCount">Miss (10s):</label>
                            <input type="number" id="missCount" name="MissCount" class="form-control" min="0" value="0" required />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group mb-3">
                            <label for="faltaCount">Falta (10s):</label>
                            <input type="number" id="faltaCount" name="FaltaCount" class="form-control" min="0" value="0" required />
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Registrar Resultado</button>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            Resultados da Segunda Rodada
        </div>
        <div class="card-body">
            @if (Model.Round2Results.Count == 0)
            {
                <p>Nenhum resultado registrado ainda.</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Posição</th>
                                <th>Nome</th>
                                <th>Bravo (3s)</th>
                                <th>Charlie (5s)</th>
                                <th>Miss (10s)</th>
                                <th>Falta (10s)</th>
                                <th>Tempo Base</th>
                                <th>Tempo Total</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var sortedResults = Model.Round2Results
                                    .OrderBy(p => p.IsEliminated)
                                    .ThenBy(p => p.CalculateTotalTime())
                                    .ToList();

                                for (int i = 0; i < sortedResults.Count; i++)
                                {
                                    var result = sortedResults[i];
                                    <tr>
                                        <td>@(i + 1)</td>
                                        <td>@result.Name</td>
                                        <td>@result.BravoCount</td>
                                        <td>@result.CharlieCount</td>
                                        <td>@result.MissCount</td>
                                        <td>@result.FaltaCount</td>
                                        <td>@(result.IsEliminated ? "Eliminado" : $"{result.TimeInSeconds}s")</td>
                                        <td>@(result.IsEliminated ? "Eliminado" : $"{result.CalculateTotalTime()}s")</td>
                                        <td>
                                            <form method="post" asp-page-handler="Remove">
                                                <input type="hidden" name="name" value="@result.Name" />
                                                <button type="submit" class="btn btn-sm btn-danger">Remover</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
        <div class="card-footer">
            <a asp-page="/Rounds/Round1" class="btn btn-secondary">Voltar para Primeira Rodada</a>
            <a asp-page="/Results/Final" class="btn btn-success">Ver Resultados Finais</a>
        </div>
    </div>
}
